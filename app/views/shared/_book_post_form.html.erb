<%= form_for(@book_post) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class='field'>
		<%= f.label :out_title, 'Title' %>
		<%= f.text_field :out_title %>
		<%= f.label :out_title, 'Sub-title' %>
		<%= f.text_field :out_title %>
		<%= f.label :out_title, 'Genre' %>
		<%= f.text_field :out_title %>
		<%= f.label :out_summary, 'Summary' %>
